{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
    },
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "scripts/templates/**/*.ts",
  ]
}
